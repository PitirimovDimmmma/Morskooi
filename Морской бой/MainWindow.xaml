<Window x:Class="Морской_бой.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Морской_бой"
        mc:Ignorable="d"
 Title="Морской бой" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="StatusMessage" FontSize="16" Margin="10" HorizontalAlignment="Center"/>

        <Grid x:Name="GameGrid" Grid.Row="1" Margin="10">
            
        </Grid>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="StartButton" Content="Начать игру" Width="100" Click="StartButton_Click"/>
            <Button x:Name="ResetButton" Content="Сбросить" Width="100" Click="ResetButton_Click" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
